<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/textabout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:text= "Notations"
        android:textAlignment="center"
        android:layout_marginBottom="20dp"
        android:background="@color/material_blue_grey_800"

        android:layout_gravity="center_horizontal" />
    <TextView
        android:id="@+id/texthelp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text= "symbol (') : counterclockwise"

    />
    <TextView
        android:id="@+id/texthelp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text= "L= Left side R= Right side"
/>


    <TextView
        android:id="@+id/texthelp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text= "U= Upper side D= Bottom side"
        />
    <TextView
        android:id="@+id/texthelp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text= "F= Front side B= Back side"
        />


    <ImageView
        android:id="@+id/imgHelp"
        android:src="@drawable/notation2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="center"
        android:background="@android:color/white"
        android:contentDescription="@string/app_name" />

</LinearLayout>